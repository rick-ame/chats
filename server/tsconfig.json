{
  "extends": "..",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "target": "ESNext",
    "lib": ["ES2023"],
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "outDir": "./dist",

    "paths": {
      "@/*": ["./*"],
      "~": ["../shared"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
